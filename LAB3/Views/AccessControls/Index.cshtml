@model IEnumerable<LAB3.Models.AccessControl>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccessStart)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccessEnd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Restricted)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Resource)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccessStart)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccessEnd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Restricted)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Resource.ResourceId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.UserId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AccessId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AccessId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AccessId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
